# Environment
ENVIRONMENT=dev

# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
# For MongoDB Atlas:
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DB_NAME=rag_liveavatar

# Azure OpenAI Realtime (East US)
AZURE_RESOURCE=your-resource-eastus
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-realtime-preview
AZURE_OPENAI_API_KEY=your-api-key

# Azure Search
AZURE_SEARCH_ENDPOINT=https://your-search-eastus.search.windows.net
AZURE_SEARCH_INDEX_NAME=your-index
AZURE_SEARCH_API_KEY=your-search-key

# Embeddings
EMBEDDING_API_KEY=your-embedding-key
EMBEDDING_ENDPOINT=https://your-embedding-eastus.openai.azure.com
EMBEDDING_API_VERSION=2023-05-15
EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002

# Server Config
HOST=0.0.0.0
PORT=8003

# Timeouts (seconds)
AZURE_CONNECTION_TIMEOUT=10
CLIENT_INIT_TIMEOUT=30

# Resilience Config
MAX_RETRY_ATTEMPTS=3
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=10.0

# Circuit Breaker
AZURE_CIRCUIT_FAILURE_THRESHOLD=5
AZURE_CIRCUIT_TIMEOUT=60
RAG_CIRCUIT_FAILURE_THRESHOLD=3
RAG_CIRCUIT_TIMEOUT=30
